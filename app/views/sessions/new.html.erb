<div class=usersnew-action>
<h2>ログイン</h2>

<%= form_with url: sessions_path, method: :post, data: {turbo: false} do |form| %>
    <div class=registration-form>
     <%= form.label :ユーザー名 %> 
     <%= form.text_field :username %>
    </div>
    <div class=registration-form>
     <%= form.label :パスワード %> 
     <%= form.password_field :password %>
    </div>
    
    <div class=registration-form>
     <%= form.submit "ログイン",id:"rg-btn" %>
    </div>


 <% end %>

   <%= link_to "新規登録を行う", new_user_path,id:"rglink" %>
</div>